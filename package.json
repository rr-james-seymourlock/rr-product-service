{
  "name": "rr-product-service-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "RR Product Service - Monorepo for Lambda functions and shared packages",
  "engines": {
    "node": ">=22.21.0",
    "pnpm": ">=10.18.1"
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "test": "turbo test",
    "test:watch": "turbo test -- --watch",
    "test:coverage": "turbo test -- --coverage",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint -- --fix && manypkg fix",
    "typecheck": "turbo typecheck",
    "format": "turbo format",
    "format:fix": "turbo format -- --write",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "clean": "turbo clean",
    "clean:workspaces": "git clean -xdf node_modules",
    "syncpack:list": "pnpm dlx syncpack list-mismatches",
    "syncpack:fix": "pnpm dlx syncpack fix-mismatches",
    "prepare": "husky",
    "postinstall": "manypkg fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@manypkg/cli": "^0.25.1",
    "@turbo/gen": "^2.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "monorepo",
    "turborepo",
    "lambda",
    "product-service"
  ],
  "author": "",
  "license": "ISC"
}
