{
  "name": "@rr/product-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Product service Lambda functions",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "sam local start-api --warm-containers EAGER",
    "dev:local": "tsx --tsconfig tsconfig.json --env-file=../../.env local-server.mjs",
    "deploy": "pnpm run build && sam deploy --resolve-s3",
    "deploy:guided": "pnpm run build && sam deploy --guided",
    "validate": "sam validate",
    "delete": "sam delete",
    "logs": "sam logs --tail",
    "invoke:local": "sam local invoke",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{ts,tsx}\"",
    "test": "vitest run",
    "clean": "rm -rf .turbo dist .aws-sam",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "docs:generate": "pnpm run openapi:generate",
    "docs:serve": "node scripts/serve-docs.mjs"
  },
  "dependencies": {
    "@middy/core": "^6.3.0",
    "@middy/http-error-handler": "^6.3.0",
    "@middy/http-json-body-parser": "^6.3.0",
    "@rr/asin-converter": "workspace:*",
    "@rr/cart-normalizer": "workspace:*",
    "@rr/product-data-normalizer": "workspace:*",
    "@rr/product-id-extractor": "workspace:*",
    "@rr/schema-parser": "workspace:*",
    "@rr/shared": "workspace:*",
    "@rr/store-registry": "workspace:*",
    "@rr/url-parser": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@rr/eslint-config": "workspace:*",
    "@rr/prettier-config": "workspace:*",
    "@rr/tsconfig": "workspace:*",
    "@types/aws-lambda": "catalog:",
    "@types/node": "catalog:",
    "esbuild": "^0.24.2",
    "tsx": "^4.20.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "prettier": "@rr/prettier-config"
}
