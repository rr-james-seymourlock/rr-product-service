{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "stream",
  "globalDependencies": ["package.json", "pnpm-lock.yaml"],
  "globalEnv": ["NODE_ENV", "AWS_REGION", "AWS_ACCOUNT_ID"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "esbuild.config.mjs",
        "template.yaml",
        "samconfig.toml"
      ],
      "outputs": ["dist/**", ".aws-sam/build/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "outputLogs": "full"
    },
    "test": {
      "dependsOn": ["^topo"],
      "inputs": ["src/**", "__tests__/**", "package.json", "vitest.config.ts", "tsconfig.json"],
      "outputs": ["coverage/**"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"],
      "inputs": ["src/**", "__tests__/**", "package.json", "eslint.config.mts"],
      "outputs": ["node_modules/.cache/.eslintcache"],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "inputs": ["src/**", "__tests__/**", "package.json", "tsconfig.json"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"],
      "outputLogs": "new-only"
    },
    "format": {
      "inputs": ["src/**", "__tests__/**", "package.json", "prettier.config.mjs"],
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false,
      "outputLogs": "full"
    },
    "docs:generate": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/contracts.ts",
        "scripts/generate-openapi.ts",
        "package.json"
      ],
      "outputs": ["docs/**"],
      "outputLogs": "new-only"
    },
    "docs:serve": {
      "dependsOn": ["docs:generate"],
      "persistent": true,
      "cache": false,
      "outputLogs": "full"
    }
  }
}
